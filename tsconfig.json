{
  "compilerOptions": {
    "jsx": "react-jsx",
    "module": "ESNext",
    "target": "es2017",
    "moduleResolution": "node",
    "strict": true,
    "declaration": true,
    "noUnusedLocals": true,
    "esModuleInterop": true,
    "outDir": "dist",
    "lib": ["ESNext", "DOM"],
    "sourceMap": false,
    "noEmitOnError": true
  },
  "include": ["playground", "src"],
  "exclude": ["**/dist", "**/node_modules", "**/test"]
}
